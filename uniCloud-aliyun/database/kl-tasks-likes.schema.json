{
  "bsonType": "object",
  "required": ["user_id", "task_id"],
  "properties": {
    "_id": { "description": "系统自动生成的唯一ID" },
    "user_id": {
      "bsonType": "objectId",
      "description": "用户ID，参考uni-id-users._id",
      "foreignKey": "uni-id-users._id"
    },
    "task_id": {
      "bsonType": "objectId",
      "description": "任务ID，参考kl-tasks._id",
      "foreignKey": "kl-tasks._id"
    },
    "create_date": {
      "bsonType": "timestamp",
      "description": "点赞时间",
      "defaultValue": { "$env": "now" }
    }
  },
  "permission": {
    "read": true,
    "create": "auth.uid == doc.user_id",
    "delete": "auth.uid == doc.user_id"
  },
  "indexes": [
    { "fields": { "user_id": 1, "task_id": 1 }, "unique": true }
  ]
} 